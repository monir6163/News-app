<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".NewsDetails">
    
    <RelativeLayout
        android:id="@+id/layoutCover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        > 
    <ImageView
        android:id="@+id/itemDetailsImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/monir"
        />
        <TextView
            android:id="@+id/itemDetailsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:gravity="center"
            android:background="#86000000"
            android:textSize="18sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#ffffff"
            android:textStyle="bold"
            />
    
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutCover"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/itemDetailsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="10dp"
                android:gravity="start"
                android:textSize="16sp"
                android:lineHeight="30sp"
                android:textColor="#E42C2C2C"
                />

        </LinearLayout>


    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/voiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="12dp"
        android:background="#FF9800"
        android:src="@drawable/voice"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        >



    </com.google.android.material.floatingactionbutton.FloatingActionButton>
    
    
    

</RelativeLayout>